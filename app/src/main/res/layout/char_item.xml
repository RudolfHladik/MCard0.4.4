

      <android.support.v7.widget.CardView

            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp">

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <ImageView
                  android:id="@+id/iv_char_img"
                  android:layout_width="100dp"
                  android:layout_height="200dp"

                  />
              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="250dp"
                  android:layout_height="200dp">
                  <TextView
                      android:id="@+id/tv_char_name"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="Character name"
                      />
                  <TextView
                      android:id="@+id/tv_char_ac"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="Advanced class"

                      />
                  <LinearLayout
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="50dp">


                  <TextView
                      android:id="@+id/tv_char_role"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="50dp"
                      android:text="tank/dps/heal"
                      />
                  <TextView
                      android:id="@+id/tv_char_env"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="50dp"
                      android:text="PVE/PVP"
                      />
                  </LinearLayout>
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/material_blue_grey_800"
                      />

                  <LinearLayout
                      android:orientation="horizontal"
                      android:layout_width="250dp"
                      android:layout_height="50dp">
                      <TextView
                          android:id="@+id/btn_delete_char"
                          android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="match_parent"
                          android:text="delete"
                          android:gravity="center"

                          />
                      <TextView
                          android:id="@+id/btn_edit_char"
                          android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="match_parent"
                          android:text="edit"
                          android:gravity="center"

                          />
                      <TextView
                          android:id="@+id/btn_disciplines"
                          android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="match_parent"
                          android:text="disciplines"
                          android:gravity="center"

                          />
                      </LinearLayout>



              </LinearLayout>

          </LinearLayout>



          </android.support.v7.widget.CardView>



