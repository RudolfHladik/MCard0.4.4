<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="0dp"
            />
        <ImageButton

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="58dp"
            android:src="@drawable/ic_rep"
            android:background="@color/white"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="0dp"

            />

        <ImageButton
            android:id="@+id/btn_imp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="58dp"
            android:src="@drawable/ic_imp"
            android:background="@color/white"

            />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <ImageButton
            android:id="@+id/btn_guardian"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="100dp"
            android:contentDescription="guardian"
            android:background="@drawable/guard_ac"

            android:layout_margin="8dp"

            />
        <ImageButton
            android:id="@+id/btn_sentinel"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="100dp"
            android:contentDescription="sentinel"
            android:background="@drawable/sent_ac"
            android:layout_margin="8dp"



            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <ImageButton
            android:id="@+id/btn_sage"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="100dp"
            android:contentDescription="sage"
            android:background="@drawable/sage_ac"
            android:layout_margin="8dp"

            />
        <ImageButton
            android:id="@+id/btn_shadow"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="100dp"
            android:contentDescription="shadow"
            android:background="@drawable/bg_card_image"
            android:src="@drawable/shadow_ac_"
            android:layout_margin="8dp"


            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <ImageButton
            android:id="@+id/btn_commando"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="100dp"
            android:contentDescription="commando"
            android:background="@drawable/mando_ac"
            android:layout_margin="8dp"



            />
        <ImageButton
            android:id="@+id/btn_vanguard"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="100dp"
            android:contentDescription="vanguard"
            android:background="@drawable/vang_ac"
            android:layout_margin="8dp"



            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <ImageButton
            android:id="@+id/btn_scoundrel"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="100dp"
            android:contentDescription="scoundrel"
            android:background="@drawable/scoundrel_ac"
            android:layout_margin="8dp"



            />
        <ImageButton
            android:id="@+id/btn_gunslinger"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="100dp"
            android:contentDescription="gunslinger"
            android:background="@drawable/slinger_ac"
            android:layout_margin="8dp"

            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
    </LinearLayout>



</LinearLayout>
    </ScrollView>