<resources>

    <!-- Base application theme. -->
    <style name="Theme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->


    </style>

    <style name="Utilities_category" parent="android:Theme.Holo">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/primary_light</item>
    </style>

    <style name="Utilities_back" parent="android:Theme.Holo">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/primary</item>

    </style>
    <style name="Widget" />

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" />

    <style name="Widget.Light" />

    <style name="Widget.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid" />

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>


    </style>

</resources>
